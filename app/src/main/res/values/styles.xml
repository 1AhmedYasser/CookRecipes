<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Collapsing Toolbar Collapsed Text Appearance. -->
    <style name="CollapsedCollapsingToolbarTextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Collapsing Toolbar Expanded Text Appearance. -->
    <style name="ExpandedCollapsingToolbarTextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Custom card view style used in recipe info xml. -->
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Custom linear layout style used in recipe info xml. -->
    <style name="recipe_info_LinearLayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Custom text view with large text appearance. -->
    <style name="TextView_largeText_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <!-- Custom text view with medium text appearance. -->
    <style name="TextView_mediumText_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>
</resources>

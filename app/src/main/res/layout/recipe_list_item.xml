<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/item_linearLayout"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/recipe_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        tools:src="@drawable/recipe_placeholder_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipe_title_text"
            style="@style/TextView_largeText_style"
            tools:text="Title" />

        <TextView
            android:id="@+id/recipe_category_text"
            style="@style/TextView_mediumText_style"
            tools:text="Category:" />

        <TextView
            android:id="@+id/recipe_rating_text"
            style="@style/TextView_mediumText_style"
            tools:text="Rating:" />
    </LinearLayout>
</LinearLayout>